{
    "name": "@cartesi/poker-webapp",
    "version": "0.1.0",
    "description": "Cartesi Poker Web Application",
    "author": "Milton Jonathan <milton.jonathan@cartesi.io>",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/cartesi-corp/poker-webapp/issues"
    },
    "homepage": "https://github.com/cartesi-corp/poker-webapp",
    "devDependencies": {
        "expose-loader": "1.0.0",
        "ncp": "^2.0.0",
        "npm-run-all": "^4.1.5",
        "ts-loader": "7.0.5",
        "typescript": "^4.2.4",
        "webpack": "4.44.1",
        "webpack-cli": "3.3.12",
        "webpack-dev-server": "3.11.0"
    },
    "dependencies": {
        "@metamask/onboarding": "^1.0.0",
        "@types/howler": "^2.2.1",
        "ethers": "^5.3.0",
        "howler": "^2.2.0",
        "phaser": "3.24.1",
        "pokersolver": "^2.1.4",
        "web3": "1.0.0-beta.55"
    },
    "scripts": {
        "start": "run-s clean contracts:deploy contracts:copy engine:copy && webpack --mode development && webpack-dev-server --mode development",
        "start:matic_testnet": "run-s clean contracts:deploy:matic_testnet contracts:copy:matic_testnet engine:copy && webpack --mode development && webpack-dev-server --mode development",
        "dev": "run-s contracts:build contracts:copy engine:copy && webpack --mode development && webpack-dev-server --mode development",
        "clean": "rimraf dist && rimraf src/abis && rimraf src/types",
        "build": "run-s clean contracts:build contracts:copy:matic_testnet engine:copy && webpack --mode production",
        "contracts:build": "cd ../blockchain && yarn build",
        "contracts:deploy": "cd ../blockchain && yarn deploy",
        "contracts:deploy:matic_testnet": "cd ../blockchain && yarn deploy:matic_testnet",
        "contracts:copy": "mkdir -p src/abis && cp ../blockchain/deployments/localhost/TurnBasedGame*.json ./src/abis/ && cp ../blockchain/deployments/localhost/Poker*.json ./src/abis/ && ncp ../blockchain/src/types/ ./src/types/",
        "contracts:copy:matic_testnet": "mkdir -p src/abis && cp ../blockchain/deployments/matic_testnet/TurnBasedGame*.json ./src/abis/ && cp ../blockchain/deployments/matic_testnet/Poker*.json ./src/abis/ && ncp ../blockchain/src/types/ ./src/types/",
        "engine:copy": "mkdir -p dist && cp ../engine/mock/poker-api.js ./dist/"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
