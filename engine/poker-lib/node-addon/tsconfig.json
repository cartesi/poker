{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["es6", "es2017", "dom"],
        "module": "commonjs",
        "allowJs": true,
        "outDir": "build",
        "noImplicitAny": false,
        "strict": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules", "later"]
}
