{
    "name": "@cartesi/electron-app",
    "productName": "cartesi-texas-hodlem",
    "version": "1.0.1",
    "description": "Cartesi Texas HODL'em",
    "repository": "https://github.com/cartesi-corp/poker",
    "main": "dist/index.js",
    "scripts": {
        "src:clean": "rimraf src",
        "src:copy": "ncp electron_src src",
        "webapp:clean": "rimraf dist/assets && rimraf dist/audiosprite && rimraf dist/textures && rimraf dist/index.html && rimraf assets && rimraf src && rimraf types",
        "webapp:copy": "mkdirp dist && ncp ../webapp/assets dist/assets && copyfiles -u 2 ../webapp/assets/audio/audiosprite.mp3 . &&  ncp ../webapp/audiosprite dist/audiosprite && ncp ../webapp/textures dist/textures && ncp ../webapp/src src && ncp ../webapp/types types",
        "contracts:deploy": "cd ../blockchain && yarn deploy",
        "contracts:build": "cd ../blockchain && yarn build",
        "contracts:copy": "copyfiles -f \"../blockchain/deployments/localhost/TurnBasedGame*.json\" ./src/abis/ && copyfiles -f \"../blockchain/deployments/localhost/Poker*.json\" ./src/abis/ && copyfiles -f ../blockchain/descartes-env/deployments/localhost/Descartes.json ./src/abis/ && copyfiles -f ../blockchain/descartes-env/deployments/localhost/Logger.json ./src/abis/ && ncp ../blockchain/src/types/ ./src/types/",
        "matic:contracts:deploy": "cd ../blockchain && yarn deploy:matic_testnet",
        "matic:contracts:copy": "copyfiles -f \"../blockchain/deployments/matic_testnet/TurnBasedGame*.json\" ./src/abis/ && copyfiles -f \"../blockchain/deployments/matic_testnet/Poker*.json\" ./src/abis/ && copyfiles -f ../node_modules/@cartesi/descartes-sdk/deployments/matic_testnet/Descartes.json ./src/abis/ && copyfiles -f ../node_modules/@cartesi/logger/deployments/matic_testnet/Logger.json ./src/abis/ && ncp ../blockchain/src/types/ ./src/types/",
        "distclean": "run-s src:clean webapp:clean && rimraf dist && rimraf .package.json.bkp",
        "prepare": "run-s distclean src:copy webapp:copy && node util/entrypoint.js && node util/engine.js",
        "prestart": "run-s prepare contracts:deploy contracts:copy && tsc",
        "start": "electron-forge start",
        "prematic:start": "run-s prepare matic:contracts:deploy matic:contracts:copy && tsc",
        "matic:start": "electron-forge start",
        "prepackage": "run-s prepare contracts:build matic:contracts:copy && rimraf out && tsc",
        "package": "electron-forge package",
        "predev": "run-s prepackage",
        "dev": "electron-forge start",
        "predev:mock": "run-s predev",
        "dev:mock": "electron-forge start -- mock",
        "predev:transportmock": "run-s predev",
        "dev:transportmock": "electron-forge start -- transport_mock",
        "premake": "run-s prepackage && ncp package.json .package.json.bkp && replace-in-file \"@cartesi/electron-app\" \"cartesi-texas-hodlem\" package.json",
        "make": "electron-forge make",
        "postmake": "move-file .package.json.bkp package.json",
        "prepublish": "run-s premake",
        "publish": "electron-forge publish",
        "postpublish": "run-s postmake",
        "lint": "eslint --ext .ts ."
    },
    "keywords": [],
    "author": {
        "name": "Marcel Moura",
        "email": "marcel.moura@cartesi.io"
    },
    "license": "Apache-2.0",
    "config": {
        "forge": "./forge.config.js"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@electron-forge/cli": "^6.0.0-beta.59",
        "@electron-forge/maker-deb": "^6.0.0-beta.59",
        "@electron-forge/maker-dmg": "^6.0.0-beta.61",
        "@electron-forge/maker-rpm": "^6.0.0-beta.59",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
        "@electron-forge/maker-zip": "^6.0.0-beta.59",
        "@electron-forge/publisher-github": "^6.0.0-beta.61",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "copyfiles": "^2.4.1",
        "electron": "16.0.3",
        "eslint": "^7.6.0",
        "eslint-plugin-import": "^2.20.0",
        "keccak": "^3.0.2",
        "mkdirp": "^1.0.4",
        "move-file-cli": "^3.0.0",
        "ncp": "^2.0.0",
        "npm-run-all": "^4.1.5",
        "platform-detect": "^3.0.1",
        "prettier": "^2.5.0",
        "replace-in-file": "^6.3.2",
        "rimraf": "^3.0.2",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "@cartesi/descartes-sdk": "^1.2.2",
        "@metamask/onboarding": "^1.0.1",
        "@portis/web3": "^4.0.6",
        "@types/howler": "^2.2.4",
        "electron-squirrel-startup": "^1.0.0",
        "update-electron-app": "^2.0.1",
        "ethers": "^5.5.2",
        "howler": "^2.2.3",
        "phaser": "^3.55.2",
        "pokersolver": "^2.1.4",
        "web3": "^1.6.1"
    }
}
