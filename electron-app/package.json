{
    "name": "cartesi-texas-hodlem",
    "productName": "cartesi-texas-hodlem",
    "version": "0.4.0",
    "description": "Cartesi's Texas HODL'em",
    "main": "dist/index.js",
    "scripts": {
        "src:clean": "rimraf src",
        "src:copy": "ncp electron_src src",
        "webapp:clean": "rimraf dist/assets && rimraf dist/audiosprite && rimraf dist/textures && rimraf dist/index.html && rimraf assets && rimraf src && rimraf types",
        "webapp:copy": "mkdirp dist && ncp ../webapp/assets dist/assets && copyfiles -u 2 ../webapp/assets/audio/audiosprite.mp3 . &&  ncp ../webapp/audiosprite dist/audiosprite && ncp ../webapp/textures dist/textures && ncp ../webapp/src src && ncp ../webapp/types types && copyfiles -u 2 \"../webapp/index.html\" dist",
        "postwebapp:copy": "replace-in-file '<script src=\"dist/bundle.js\"></script>' '<script>require(\"./app.js\")</script>' dist/index.html",
        "contracts:deploy": "cd ../blockchain && yarn deploy",
        "contracts:build": "cd ../blockchain && yarn build",
        "contracts:copy": "copyfiles -f \"../blockchain/deployments/localhost/TurnBasedGame*.json\" ./src/abis/ && copyfiles -f \"../blockchain/deployments/localhost/Poker*.json\" ./src/abis/ && copyfiles -f ../blockchain/descartes-env/deployments/localhost/Descartes.json ./src/abis/ && copyfiles -f ../blockchain/descartes-env/deployments/localhost/Logger.json ./src/abis/ && ncp ../blockchain/src/types/ ./src/types/",
        "matic:contracts:deploy": "cd ../blockchain && yarn deploy:matic_testnet",
        "matic:contracts:copy": "copyfiles -f \"../blockchain/deployments/matic_testnet/TurnBasedGame*.json\" ./src/abis/ && copyfiles -f \"../blockchain/deployments/matic_testnet/Poker*.json\" ./src/abis/ && copyfiles -f ../node_modules/@cartesi/descartes-sdk/deployments/matic_testnet/Descartes.json ./src/abis/ && copyfiles -f ../node_modules/@cartesi/logger/deployments/matic_testnet/Logger.json ./src/abis/ && ncp ../blockchain/src/types/ ./src/types/",
        "distclean": "run-s src:clean webapp:clean && rimraf dist",
        "prepare": "run-s distclean src:copy webapp:copy",
        "wasm:engine:copy": "copyfiles -f \"../engine/platforms/wasm/build/poker-lib/*.ts\" src/services/engine && copyfiles -f \"../engine/platforms/wasm/build/lib/poker-lib-wasm.*\" dist/assets/engine",
        "wasm:prepare": "run-s prepare wasm:engine:copy",
        "linux:engine:copy": "mkdirp dist && copyfiles -f \"../engine/platforms/x64/build/poker-lib/*.ts\" src/services/engine && copyfiles -f \"../engine/platforms/x64/build/lib/pokerlib.node\" dist/assets/engine",
        "linux:prepare": "run-s prepare linux:engine:copy",
        "macos:engine:copy": "copyfiles -f \"../engine/poker-lib/node-addon/src/*.ts\" src/services/engine && copyfiles -f \"./lib/darwin_x64/*\" dist/assets/engine",
        "macos:prepare": "run-s prepare macos:engine:copy",
        "prestart": "run-s contracts:deploy contracts:copy",
        "start": "tsc && electron-forge start",
        "prematic:start": "run-s matic:contracts:deploy matic:contracts:copy",
        "matic:start": "tsc && electron-forge start",
        "prepackage": "run-s contracts:build matic:contracts:copy",
        "package": "rimraf out && tsc && electron-forge package",
        "predev": "run-s prepackage",
        "dev": "tsc && electron-forge start",
        "predev:mock": "run-s predev",
        "dev:mock": "tsc && electron-forge start -- mock",
        "predev:transportmock": "run-s predev",
        "dev:transportmock": "tsc && electron-forge start -- transport_mock",
        "make": "run-s package && electron-forge make --skip-package",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .ts ."
    },
    "keywords": [],
    "author": {
        "name": "Marcel Moura",
        "email": "marcel.moura@cartesi.io"
    },
    "license": "Apache-2.0",
    "config": {
        "forge": "./forge.config.js"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@electron-forge/cli": "^6.0.0-beta.59",
        "@electron-forge/maker-deb": "^6.0.0-beta.59",
        "@electron-forge/maker-dmg": "^6.0.0-beta.61",
        "@electron-forge/maker-rpm": "^6.0.0-beta.59",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
        "@electron-forge/maker-zip": "^6.0.0-beta.59",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "copyfiles": "^2.4.1",
        "electron": "16.0.3",
        "eslint": "^7.6.0",
        "eslint-plugin-import": "^2.20.0",
        "keccak": "^3.0.2",
        "mkdirp": "^1.0.4",
        "ncp": "^2.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.0",
        "replace-in-file": "^6.3.2",
        "rimraf": "^3.0.2",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "@cartesi/descartes-sdk": "^1.2.2",
        "@metamask/onboarding": "^1.0.1",
        "@portis/web3": "^4.0.6",
        "@types/howler": "^2.2.4",
        "electron-squirrel-startup": "^1.0.0",
        "ethers": "^5.5.2",
        "howler": "^2.2.3",
        "phaser": "^3.55.2",
        "pokersolver": "^2.1.4",
        "web3": "^1.6.1"
    }
}
